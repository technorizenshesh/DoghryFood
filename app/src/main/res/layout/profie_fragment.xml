                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mairy Luies"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/_16sdp"/>

                    <TextView
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mairly@gmail.com"
                        android:fontFamily="@font/roboto_light"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/_14sdp"/>

                </LinearLayout>

            </RelativeLayout>



            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLeftMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/user" />

                    <TextView
                        android:layout_toLeftOf="@+id/img_nav"
                        android:id="@+id/search_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/imgLeftMenu"
                        android:text="Profile"
                        android:textSize="16dp"
                        android:inputType="text"
                        android:textColor="@color/yellow" />

                    <ImageView
                        android:id="@+id/img_nav"
                        android:layout_alignParentRight="true"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
