<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5sp"
    android:layout_margin="5dp"
    >

    <RelativeLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_gravity="left"
            android:background="#ECEFF1"
            android:id="@+id/rr_super_item"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp">


        </RelativeLayout>

        <RelativeLayout
            android:layout_toRightOf="@+id/rr_super_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:background="@color/white"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:textColor="@color/blue"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/txt_selection_mode"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moje Shop" />


                <RelativeLayout
                    android:id="@+id/RR_rating"
                    android:layout_below="@+id/txt_selection_mode"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <RatingBar
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:id="@+id/rating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:max="5"
                        android:rating="5"
                        android:scaleX=".8"
                        android:scaleY=".8"
                        style ="?android:attr/ratingBarStyleSmall"
                        android:theme="@style/MyRatingBar1" />

                    <TextView
                        android:id="@+id/rating_txt"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/rating1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0 "
                        android:textStyle="bold"
                        >
                    </TextView>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_below="@+id/RR_rating"
                    android:orientation="horizontal"
                    android:id="@+id/RR_serr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/txt_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:singleLine="true"
                        android:text="Pizza,Fast"
                        android:textSize="14dp" />

                    <TextView
                        android:visibility="visible"
                        android:layout_toRightOf="@+id/txt_one"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=",Food"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="-10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/RR_serr"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="$ 50 per person"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=" . "
                        android:textSize="@dimen/_20sdp" />


                    <TextView
                        android:visibility="visible"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 mins"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>