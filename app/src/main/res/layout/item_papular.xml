<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="@dimen/_5sdp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:background="#ECEFF1"
            android:id="@+id/rr_super_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp">

            <ImageView
                android:src="@drawable/rest_img"
                android:id="@+id/img_res"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_alignParentLeft="true"
                android:padding="@dimen/_5sdp"
                android:background="@color/blue"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="@dimen/_12sdp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50% off -use code Oreal50" />


            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/rr_super_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:background="@color/white"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:textColor="@color/blue"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/txt_selection_mode"
                    android:singleLine="true"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moje -The Sandwich Shop" />

                <RelativeLayout
                    android:id="@+id/RR_like"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/roundbttn_view"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp">

                    <ImageView
                        android:id="@+id/img_like"
                        android:layout_centerInParent="true"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/add_fav" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/RR_rating"
                    android:layout_below="@+id/txt_selection_mode"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RatingBar
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="-5dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:id="@+id/rating1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:max="5"
                        android:rating="5"
                        android:scaleX=".8"
                        android:scaleY=".8"
                        style ="?android:attr/ratingBarStyleSmall"
                        android:theme="@style/MyRatingBar1" />

                    <TextView
                        android:id="@+id/rating_txt"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/rating1"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0 "
                        android:textStyle="bold"
                        >
                    </TextView>

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_toRightOf="@+id/rating_txt"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(2452 Delivery Reviews)"
                        >
                    </TextView>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_below="@+id/RR_rating"
                    android:orientation="horizontal"
                    android:id="@+id/RR_serr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/txt_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:singleLine="true"
                        android:text="Pizza,Fast"
                        android:textSize="14dp" />

                    <TextView
                        android:visibility="visible"
                        android:layout_toRightOf="@+id/txt_one"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=",Food"
                        android:textSize="@dimen/_12sdp" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="-10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/RR_serr"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="$ 50 per person"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text=" . "
                        android:textSize="@dimen/_20sdp" />


                    <TextView
                        android:visibility="visible"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30 mins"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>